.l-class{
    padding: 40rpx 30rpx 20rpx;
    display: flex;
    align-items: center;
    position: fixed;
    width: 100%;
    height: 125rpx;
    top: 0;
    left: 0;
    background-color: #f5f5f5;
}
.l-class view{
    width: 148rpx;
    line-height: 64rpx;
    background: #fff;
    border-radius: 8rpx;
    color: #575757;
    font-size: 28rpx;
    text-align: center;
    margin-right: 60rpx;
}
.l-class .l-list-a{
    background: var(--yellow);
    font-weight: bold;
}
.l-list{
    padding: 0rpx 30rpx 40rpx;
}
.l-item{
    padding: 30rpx 0;
    border-radius: 18rpx;
    background: #fff;
    margin-top: 40rpx;
}
.l-item>view{
    padding: 0 30rpx;
}
.l-mark{
    font-size: 28rpx;
    color: var(--gray);
}
.l-title{
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 20rpx;
}
.l-item .l-tc{
    font-size: 28rpx;
    color: (--gray);
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid var(--border);
}
.l-but{
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.l-status{
    font-size: 32rpx;
    color: var(--gray);
    flex-grow: 1;
}
.l-but>view:nth-child(2){
    width: 166rpx;
    line-height: 68rpx;
    border-radius: 34rpx;
    border: 2rpx solid #E4E4E4;
    color: #575757;
    text-align: center;
    font-size: 28rpx;
    min-width: 166rpx;
    margin-right: 60rpx;
}
.l-but>view:nth-child(3){
   font-size: 36rpx;
   color: var(--price-c);
   font-weight: bold;
}