.evaluate-con .score{background-color:#fff;border-top:24rpx solid #F6F6F6;font-size:28rpx;color:#282828;padding:60rpx 30rpx 65rpx 30rpx;}
.evaluate-con .score .item~.item{margin-top:30rpx;}
/* .evaluate-con .score .item .starsList{padding:0 35rpx 0 40rpx;} */
.evaluate-con .score .item .starsList .iconfont{font-size:45rpx;color:#aaa;}
.evaluate-con .score .item .starsList .iconfont~.iconfont{margin-left:20rpx;}
.evaluate-con .score .item .evaluate{color:#F64545;font-size:32rpx;
    margin-left: 20rpx;
}
.evaluate-con .score .textarea{width:690rpx;background-color:#fafafa;border-radius:10rpx;margin-top:48rpx;}
.evaluate-con .score .textarea textarea{font-size:32rpx;padding:38rpx 30rpx 0 30rpx;width:100%;box-sizing:border-box;height:160rpx;
    background: #F6F6F6;
    border-radius: 12rpx 12rpx 0 0;
}
.evaluate-con .score .textarea .placeholder{color:#bbb;}
.evaluate-con .score .textarea .list{
   padding-top:25rpx;padding-left:5rpx;
    background: #F6F6F6;
    border-radius: 0 0 12rpx 12rpx;
}
.evaluate-con .score .textarea .list .pictrue{width:160rpx;height:160rpx;margin:0 0 40rpx 25rpx;position:relative;font-size:22rpx;color:#bbb;}
.evaluate-con .score .textarea .list .pictrue:nth-last-child(1){border:1rpx solid #ddd;box-sizing:border-box;}
.evaluate-con .score .textarea .list .pictrue image{width:100%;height:100%;border-radius:3rpx;}
.evaluate-con .score .textarea .list .pictrue .icon-guanbi1{font-size:45rpx;position:absolute;top:-20rpx;right:-20rpx;}
.evaluate-con .score .textarea .list .pictrue .icon-icon25201{color:#bfbfbf;font-size:50rpx;}
.evaluate-con .score .evaluateBnt{font-size:30rpx;color:#fff;width:690rpx;height:86rpx;border-radius:43rpx;text-align:center;line-height:86rpx;margin-top:45rpx;}
.top-box{
    padding: 30rpx;
    background: #fff;
}
.top-box>view:nth-child(1){
    font-size: 36rpx;
    font-weight: bold;
}
.top-box>view:nth-child(2){
    font-size: 28rpx;
    color: var(--gray);
    margin-top: 20rpx;
}
.top-box>view:nth-child(3){
    font-size: 36rpx;
    color: var(--price-c);
    margin-top: 20rpx;
    font-weight: bold;
    text-align: right;
}

.item-name{
    font-size: 36rpx;
    font-weight: bold;
}
.item-xing{
    padding: 20rpx 0 40rpx;
    border-bottom: 1rpx solid var(--border);
}

.up-but{
    color: #A1A1A1;
    font-size: 32rpx;
}
.evaluate-con .but{
    margin-top: 80rpx;
}