@import '/app.wxss';
.pop-top{
    display: flex;
    justify-content: space-between;
}
.pop-top{
    width: 100%;
    padding-bottom: 40rpx;
    border-bottom: 1px solid #E4E4E4;
}
.pop-top image{
    width: 226rpx;
    height: 226rpx;
    min-width: 226rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}
.pop-title view:nth-child(1){
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
}
.pop-title view:nth-child(2){
    font-size: 56rpx;
    color: var(--price-c);
    font-weight: bold;
    margin-top: 20rpx;
}
.pop-title text{
    color: var(--price-c);
    font-size: 36rpx;
}
.pop-title view:nth-child(3){
    color: var(--gray);
    font-size: 32rpx;
}
.pop-tc{
    margin-top: 40rpx;
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
}

.pop-item{
    margin-top: 30rpx;
    border-radius: 8rpx;
    padding: 25rpx;
    border: 2rpx solid #E4E4E4;
    background: #fff;
}
.pop-item view{
    color: #575757;
    font-size: 32rpx;
    font-weight: bold;
}
.pop-item-a{
    border: 2rpx solid #D1B315;
    background: #FFFBE6;
}
.pop-item-a view{
    color: #675704;
}
.pop-sum{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 45rpx;
}
.pop-sum-t{
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
}
.pop-sum-s{
    display: flex;
    align-items: center;
}
.pop-sum-s image{
    width: 40rpx;
    height: 40rpx;
}
.pop-sum-s input{
    width: 302rpx;
    height: 62rpx;
    background: #F6F6F6;
    border-radius: 4rpx;
    text-align: center;
    margin: 0 20rpx;
}
.pop-hint{
    font-size: 28rpx;
    color: #F64545;
    text-align: center;
    margin-top: 70rpx;
}





.centers{
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.product-window {
    position: fixed;
    background-color: #fff;
    z-index: 77;
    border-radius: 15rpx;
    padding: 40rpx 30rpx 50rpx;
    transition: all .3s cubic-bezier(.25, .5, .5, .9);
    -webkit-transition: all .3s cubic-bezier(.25, .5, .5, .9);
}

.below {
    left: 0;
    bottom: 0;
    transform: translate3d(0, 100%, 0);
    -webkit-transform: translate3d(0, 100%, 0);
}

.up {
    top: 0;
    left: 0;
    transform: translate3d(0, -100%, 0);
    -webkit-transform: translate3d(0, -100%, 0);
}

.right {
    right: 0;
    top: 0;
    height: 100%;
    transform: translate3d(100vw, 0, 0);
    -webkit-transform: translate3d(100vw, 0, 0);
}

.left {
    left: 0;
    top: 0;
    height: 100%;
    transform: translate3d(-100vw, 0, 0);
    -webkit-transform: translate3d(-100vw, 0, 0);
}
.center{
    transform: translate3d(-100vw, -100%, 0);
    -webkit-transform: translate3d(-100vw, -100%, 0);
}
.product-window.on {
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    opacity: .5;
    z-index: 5;
}


.product-window .iconfont {
    position: fixed;
    right: 30rpx;
    top: 20rpx;
    font-size: 35rpx;
    color: #8a8a8a;
    width: 40rpx;
    height: 40rpx;
}