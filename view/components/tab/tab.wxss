image{
  display: block;
}
.tab-box{
  position: fixed;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  background: #fff;
}
.tab-isX{
  padding-bottom: 30rpx;
}
.tabBox{
  width: 100%;
  background:#fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow:0px -4rpx 8rpx 0rpx rgba(0,0,0,0.11);
  height: 96rpx;
}
.tabList{
  text-align: center;
  flex-grow: 1;
  font-weight: bold;
}
.tab-item{
  line-height: 96rpx;
  font-size: 36rpx;
  position: relative;
}
.tabListColor .tab-item{
  color:#A1A1A1;
  font-weight: normal;
}
.tab-empty{
  width: 94rpx;
  height: 6rpx;
  background: var(--bg);
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -47rpx;
}
.tab-reg{
  width: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background: #F64545;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  text-align: center;
  font-weight: normal;
  padding-left: 5rpx;
}
.tab-center{
  width: 96rpx;
  height: 68rpx;
  background: var(--bg);
  margin: 0 auto;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-center image{
  width: 44rpx;
  height: 44rpx;
}







@keyframes show {
  from {
    transform: scale(1.3);
  }
  20% {
    transform: scale(0.8);
  }

  40% {
    transform: scale(1);
  }

  60% {
    transform: scale(0.7);
  }

  80%,100% {
    transform: scale(1);
  }
}

.show {
  animation: show 1s;
}
